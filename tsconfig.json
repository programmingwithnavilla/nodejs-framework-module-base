{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@core/*": ["src/core/*"],
      "@infra/*": ["src/infra/*"],
      "@domain/*": ["src/domain/*"],
      "@app/*": ["src/application/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
